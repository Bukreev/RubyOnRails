<% if notice %>
    <p id = "notice"><%= notice %></p>
<% end %>




<h1>Наша витрина</h1>
<% cache ['store', Product.latest] do %>
    <% @products.each do |product| %>
    <% cache ['entry', product] do %>
        <div class = "entry">
          <h3><%= product.title %></h3>
          <div><%= image_tag(product.image_url) %></div>
          <div><%= sanitize(product.description) %></div>
          <div class = "price_line">
            <span><%= number_to_currency(product.price) %></span>
          </div>
          <%= button_to 'Купить', line_items_path(product_id: product), remote: true %>
        </div>
    <% end %>
<% end %>
<% end %>